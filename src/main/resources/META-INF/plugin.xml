<idea-plugin>
    <id>org.edadeal</id>
    <name>Stylus Linter</name>
    <vendor email="chupurnov@gmail.com" url="https://edadeal.ru">Yandex.Edadeal</vendor>
    <category>Web</category>
    <description>Stylus Linter and Syntax Highligher use https://npmjs.net/stylus-linter</description>s

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends optional="true">com.intellij.css</depends>
    <depends>org.jetbrains.plugins.stylus</depends>

    <extensions defaultExtensionNs="com.intellij">
        <externalAnnotator language="Stylus" implementationClass="org.edadeal.StylusExternalAnnotator"/>
        <applicationConfigurable instance="org.edadeal.Settings" />
    </extensions>

    <actions>
        <group id="StylusLinter.SampleMenu" text="Greeting" description="Greeting menu">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="StylusLinter.org.edadeal.LintAction" class="org.edadeal.LintAction" text="Hello" description="Says hello">
                <keyboard-shortcut first-keystroke="control alt A" second-keystroke="C" keymap="$default"/>
            </action>
        </group>
    </actions>
</idea-plugin>